FROM node:23-alpine

WORKDIR /app

# Копируем common и устанавливаем его зависимости
COPY ./server/common ./server/common
WORKDIR /app/server/common
RUN yarn install

# Копируем сначала только файлы для установки зависимостей hermes
WORKDIR /app
COPY ./server/hermes/package.json ./hermes/
WORKDIR /app/hermes
RUN yarn install

# Затем копируем файлы сервиса
COPY ./server/hermes .

USER node

CMD [ "npx", "ts-node", "index.ts" ]
