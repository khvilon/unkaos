FROM node:23.5.0-alpine

WORKDIR /app

# Копируем common и устанавливаем его зависимости
COPY ./server/common ./server/common
WORKDIR /app/server/common
RUN yarn install

# Копируем сначала только файлы для установки зависимостей hecate
WORKDIR /app/server/hecate
COPY ./server/hecate/package.json ./
RUN yarn install

# Затем копируем файлы сервиса
COPY ./server/hecate .

USER node

CMD [ "npx", "ts-node", "index.ts" ]
