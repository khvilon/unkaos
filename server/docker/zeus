FROM node:23.5.0-alpine

WORKDIR /app

# Копируем common и устанавливаем его зависимости
COPY ./server/common ./server/common
WORKDIR /app/server/common
RUN yarn install

# Копируем сначала только файлы для установки зависимостей zeus
WORKDIR /app
COPY ./server/zeus/package.json ./zeus/
WORKDIR /app/zeus
RUN yarn install

# Затем копируем файлы сервиса
COPY ./server/zeus .

USER node

CMD [ "npx", "ts-node", "index.ts" ]
