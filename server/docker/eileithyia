FROM node:23.5.0-alpine

WORKDIR /app

# Копируем common и устанавливаем его зависимости
COPY ./server/common ./server/common
WORKDIR /app/server/common
RUN yarn install

# Копируем сначала только файлы для установки зависимостей eileithyia
WORKDIR /app
COPY ./server/eileithyia/package.json ./eileithyia/
WORKDIR /app/eileithyia
RUN yarn install

# Затем копируем файлы сервиса
COPY ./server/eileithyia .

COPY ./README.md /app/README.md
COPY ./README_RU.md /app/README_RU.md
COPY ./LICENSE /app/LICENSE
COPY ./meta.json /app/meta.json

USER node

CMD [ "npx", "ts-node", "index.ts" ]
