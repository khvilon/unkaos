FROM node:23.5.0-alpine

WORKDIR /app

# Копируем common и устанавливаем его зависимости
COPY ./server/common ./server/common
WORKDIR /app/server/common
RUN yarn install

# Копируем сначала только файлы для установки зависимостей athena
WORKDIR /app
COPY ./server/athena/package.json ./athena/
WORKDIR /app/athena
RUN yarn install

# Затем копируем файлы сервиса
COPY ./server/athena .

USER node

CMD [ "npx", "ts-node", "index.ts" ]
